<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:padding="8dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <!-- Card container -->
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_card"
        android:elevation="4dp"
        android:padding="0dp">

        <!-- Header row: Title + expand -->
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:background="#FFC107"
            android:padding="12dp">

            <ImageView
                android:id="@+id/iv_expand"
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:src="@android:drawable/arrow_down_float"
                android:contentDescription="expand"
                app:tint="@android:color/black" />

            <TextView
                android:id="@+id/tv_name"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="@android:color/white"
                android:gravity="center"
                android:text="" />

        </LinearLayout>

        <!-- Collapsed: Event type (now bold for collapsed card) -->
        <TextView
            android:id="@+id/tv_event_type"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="8dp"
            android:text="Event type"
            android:textStyle="bold"
            android:textColor="#444444"
            android:textSize="15sp"/>

        <!-- Summary row -->
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="12dp">

            <ImageView
                android:id="@+id/iv_thumbnail"
                android:layout_width="56dp"
                android:layout_height="56dp"
                android:layout_marginEnd="8dp"
                android:scaleType="centerCrop"
                android:contentDescription="thumbnail"
                android:src="@drawable/ic_placeholder" />

            <!-- Collapsed summary (vertical column: description then DATE badge only) -->
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/tv_summary"
                    android:layout_marginBottom="8dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:textColor="#333333"
                    android:textSize="14sp"
                    android:textStyle="italic" />

                <!-- Only DATE badge shown in collapsed state -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginTop="4dp"
                    android:layout_marginBottom="8dp">

                    <ImageView
                        android:id="@+id/iv_date_box"
                        android:layout_width="36dp"
                        android:layout_height="36dp"
                        android:src="@drawable/ic_calendar_boxed"
                        android:contentDescription="date icon"
                        android:adjustViewBounds="false"
                        android:scaleType="centerInside" />

                    <TextView
                        android:id="@+id/tv_date"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="8dp"
                        android:text=""
                        android:textColor="#5D4037"
                        android:textSize="14sp"
                        android:gravity="center_vertical" />
                </LinearLayout>



            </LinearLayout>
        </LinearLayout>

        <!-- Expandable details -->
        <LinearLayout
            android:id="@+id/ll_details"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone"
            android:padding="12dp">

            <!-- keep old tv_details hidden to avoid changing adapter logic -->
            <TextView
                android:id="@+id/tv_details"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text=""
                android:textColor="#555555"
                android:textSize="14sp"
                android:visibility="gone" />

            <!-- NEW: start - end (duration) row: boxed clock icon + time range text -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginTop="4dp"
                android:layout_marginBottom="8dp">

                <ImageView
                    android:id="@+id/iv_duration_box"
                    android:layout_width="36dp"
                    android:layout_height="36dp"
                    android:src="@drawable/ic_clock_boxed"
                    android:contentDescription="duration icon"
                    android:adjustViewBounds="false"
                    android:scaleType="centerInside" />

                <TextView
                    android:id="@+id/tv_time_range"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:text=""
                android:textSize="14sp"
                android:textColor="@android:color/black" />
            </LinearLayout>

            <!-- Location row: boxed icon + location text (unchanged behavior) -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <ImageView
                    android:id="@+id/iv_location_box"
                    android:layout_width="36dp"
                    android:layout_height="36dp"
                    android:src="@drawable/ic_location_boxed"
                    android:contentDescription="location icon"
                    android:adjustViewBounds="false"
                    android:scaleType="centerInside" />

                <TextView
                    android:id="@+id/tv_location"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:textSize="14sp"
                    android:textColor="@android:color/black"
                    android:layout_marginStart="8dp" />
            </LinearLayout>


            <!-- Images label (shown only when there are images) -->
            <LinearLayout
                android:id="@+id/images_label_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center"
                android:layout_marginTop="8dp"
                android:visibility="gone">

                <TextView
                    android:id="@+id/tv_images_label"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/images_header"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:gravity="center" />

                <!-- small underline bar (pure XML, reliable across platforms) -->
                <View
                    android:layout_width="100dp"
                    android:layout_height="2dp"
                    android:layout_marginTop="6dp"
                    android:background="#88000000" />
            </LinearLayout>


            <!-- Image gallery (unchanged) -->
            <HorizontalScrollView
                android:id="@+id/hsv_images"
                android:layout_marginTop="8dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:id="@+id/ll_images"
                    android:orientation="horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent" />
            </HorizontalScrollView>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center_horizontal">

            <!-- VIEW IMAGES button (appears for completed events) -->
            <Button
                android:id="@+id/btn_view_images"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/view_all_past_images"
                android:visibility="gone"
                android:layout_marginTop="8dp"
                android:padding="12dp"
                android:drawablePadding="8dp"
                android:backgroundTint="@color/teal_200"
                android:textColor="@android:color/white" />

            </LinearLayout>

            <!-- Edit + Delete buttons (unchanged) -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="end"
                android:layout_marginTop="12dp">

                <Button
                    android:id="@+id/btn_edit"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Edit"
                    android:backgroundTint="#FFB300"
                    android:textColor="@android:color/white" />

                <Button
                    android:id="@+id/btn_delete"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Delete"
                    android:layout_marginStart="8dp"
                    android:backgroundTint="@android:color/holo_red_dark"
                    android:textColor="@android:color/white" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <!-- Divider -->
    <View
        android:layout_marginTop="12dp"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#22000000"/>
</LinearLayout>
