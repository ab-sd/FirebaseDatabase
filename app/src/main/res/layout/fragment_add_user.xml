<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/scrollView"
    android:clipToPadding="false"
    android:fillViewport="true"
    android:padding="16dp"
    android:background="#FFFDE7"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

<LinearLayout
android:orientation="vertical"
android:layout_width="match_parent"
android:layout_height="wrap_content"
>

<!-- Title -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Event Title"
        android:textColor="#F9A825"
        android:textStyle="bold"
        android:layout_marginTop="12dp"/>

<com.google.android.material.textfield.TextInputLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:hint="Please enter the title of the event"
    app:boxStrokeColor="#FBC02D"
    app:hintTextColor="#F9A825">

    <com.google.android.material.textfield.TextInputEditText
        android:id="@+id/et_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
</com.google.android.material.textfield.TextInputLayout>

    <!-- Event Type (Spinner) -->
<TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="Event Type"
    android:textColor="#F9A825"
    android:textStyle="bold"
    android:layout_marginTop="12dp"/>

    <FrameLayout
        android:id="@+id/spinner_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:foreground="?attr/selectableItemBackground"
        android:clickable="true"
        android:focusable="true"
        android:padding="0dp">

        <Spinner
            android:id="@+id/spinner_event_type"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:background="@drawable/spinner_background_selector"
            android:popupBackground="@drawable/spinner_box_filled"
            android:paddingStart="4dp"
            android:paddingEnd="44dp" />

        <!-- Arrow icon overlaid on the right -->
        <ImageView
            android:id="@+id/spinner_arrow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center|end"
            android:layout_marginEnd="12dp"
            android:src="@drawable/ic_arrow_drop_down"  />
    </FrameLayout>


    <!-- Event Description -->
<TextView
    android:layout_marginTop="12dp"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="Event Description (English)"
    android:textColor="#F9A825"
    android:textStyle="bold" />

<com.google.android.material.textfield.TextInputLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:boxStrokeColor="#FBC02D"
    app:hintTextColor="#F9A825">
    <com.google.android.material.textfield.TextInputEditText
        android:id="@+id/et_description_primary"
        android:hint="Enter description details of event"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
</com.google.android.material.textfield.TextInputLayout>


    <!-- isiZulu Description -->
<TextView
    android:layout_marginTop="12dp"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="Event Description (isiZulu)"
    android:textColor="#F9A825"
    android:textStyle="bold"/>

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:gravity="center_vertical">

    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        app:boxStrokeColor="#FBC02D"
        app:hintTextColor="#F9A825">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/et_description_secondary"
            android:hint="Enter description in isiZulu"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
    </com.google.android.material.textfield.TextInputLayout>

    <ImageButton
        android:id="@+id/btn_paste_secondary"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:src="@drawable/ic_paste"
        android:contentDescription="Paste from clipboard"
        android:layout_marginStart="8dp"
        android:padding="8dp"
        app:tint="#F9A825" />

    <ProgressBar
        android:id="@+id/pb_secondary_translate"
        style="?android:attr/progressBarStyleSmall"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:indeterminate="true"
        android:visibility="gone"
        android:layout_marginStart="6dp"/>
</LinearLayout>

<TextView
    android:id="@+id/tv_verify_secondary"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="Check isiZulu translation online"
    android:textColor="#0909EB"
    android:textStyle="italic"
    android:paddingTop="4dp"
    android:layout_marginStart="4dp"/>

    <!-- Afrikaans Description -->
<TextView
    android:layout_marginTop="12dp"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="Event Description (Afrikaans)"
    android:textColor="#F9A825"
    android:textStyle="bold"/>

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:gravity="center_vertical">

    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        app:boxStrokeColor="#FBC02D"
        app:hintTextColor="#F9A825">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/et_description_tertiary"
            android:hint="Enter description in Afrikaans"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
    </com.google.android.material.textfield.TextInputLayout>

    <ImageButton
        android:id="@+id/btn_paste_tertiary"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:src="@drawable/ic_paste"
        android:contentDescription="Paste from clipboard"
        android:layout_marginStart="8dp"
        android:padding="8dp"
        app:tint="#F9A825" />

    <ProgressBar
        android:id="@+id/pb_tertiary_translate"
        style="?android:attr/progressBarStyleSmall"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:indeterminate="true"
        android:visibility="gone"
        android:layout_marginStart="6dp"/>
</LinearLayout>

<TextView
    android:id="@+id/tv_verify_tertiary"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="Check Afrikaans translation online"
    android:textColor="#0909EB"
    android:textStyle="italic"
    android:paddingTop="4dp"
    android:layout_marginStart="4dp"
    android:paddingBottom="5dp"/>


    <!-- Date and Time -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Event Date/Time"
        android:textColor="#F9A825"
        android:textStyle="bold"
        android:layout_marginTop="12dp"/>
<LinearLayout
    android:layout_marginTop="5dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:background="@drawable/bg_date_time"
    android:weightSum="2">

    <TextView
        android:id="@+id/tv_event_date"
        android:layout_weight="1"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:padding="12dp"
        android:background="@drawable/bg_date_time"
        android:text="Select date"
        android:textColor="#000"/>

    <TextView
        android:id="@+id/tv_event_time"
        android:layout_weight="1"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:padding="12dp"
        android:text="Select time"
        android:layout_marginStart="8dp"
        android:textColor="#000"
       />
</LinearLayout>


    <!-- Duration -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Event Duration (min)"
        android:textColor="#F9A825"
        android:textStyle="bold"
        android:layout_marginTop="12dp"/>
<com.google.android.material.textfield.TextInputLayout
    android:layout_marginTop="3dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:boxStrokeColor="#FBC02D"
    app:hintTextColor="#F9A825">

    <com.google.android.material.textfield.TextInputEditText
        android:id="@+id/et_duration"
        android:inputType="number"
        android:hint="Enter duration in minutes"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
</com.google.android.material.textfield.TextInputLayout>


    <!-- Location -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Event Location"
        android:textColor="#F9A825"
        android:textStyle="bold"
        android:layout_marginTop="12dp"/>
    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/til_location"
        android:layout_marginTop="3dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:boxStrokeColor="#FBC02D"
        app:hintTextColor="#F9A825">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/et_location"
            android:hint="Enter the location"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
    </com.google.android.material.textfield.TextInputLayout>

    <!-- Checkbox placed below location for more space -->
    <CheckBox
        android:id="@+id/cb_include_map"
        android:layout_marginTop="8dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Include Google Maps link"
        android:textColor="#F9A825"/>

    <!-- Google Maps link input row (hidden until checkbox checked).
         This is a horizontal row with the input, a paste button and a small progress bar. -->
    <LinearLayout
        android:id="@+id/layout_map_link_row"
        android:layout_marginTop="8dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:visibility="gone">

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/til_map_link"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            app:boxStrokeColor="#FBC02D"
            app:hintTextColor="#F9A825">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/et_map_link"
                android:hint="Paste Google Maps link (https://...)"
                android:inputType="textUri"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
        </com.google.android.material.textfield.TextInputLayout>

        <ImageButton
            android:id="@+id/btn_paste_map_link"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:src="@drawable/ic_paste"
            android:contentDescription="Paste map link"
            android:layout_marginStart="8dp"
            android:padding="8dp"
            app:tint="#F9A825" />
    </LinearLayout>



<!-- Image picker -->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn_pick_images"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:padding="12dp"
        android:layout_gravity="center"
        android:text="Pick Images (max 15)"
        android:textColor="@color/button_text"
        android:backgroundTint="@color/button_tint"
        android:drawableLeft="@android:drawable/ic_menu_camera"
        app:iconTint="@color/button_text"
        app:iconSize="25dp"
        app:iconPadding="8dp"
        app:cornerRadius="5dp"
        app:iconGravity="textStart" />

    <TextView
    android:id="@+id/tv_images_count"
    android:layout_marginTop="8dp"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="No images selected"
    android:textColor="#616161"/>

    <View style="@style/DividerStyle" />


    <!-- RecyclerView -->
<androidx.recyclerview.widget.RecyclerView
    android:id="@+id/recycler_selected_images"
    android:layout_marginTop="8dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:clipToPadding="false"
    android:padding="4dp"/>

    <View style="@style/DividerStyle" />


    <ProgressBar
        android:id="@+id/pb_save"
        style="?android:attr/progressBarStyleLarge"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:visibility="gone"
        android:layout_marginTop="16dp"/>

    <!-- Save/Cancel row (replace the single btn_save) -->
    <LinearLayout
        android:id="@+id/layout_action_buttons"
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical">

        <Button
            android:id="@+id/btn_cancel"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:backgroundTint="#BDBDBD"
            android:textColor="#000"
            android:text="Cancel" />

        <!-- spacing between buttons -->
        <Space
            android:layout_width="8dp"
            android:layout_height="wrap_content" />

        <Button
            android:id="@+id/btn_save"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:backgroundTint="#F57F17"
            android:textColor="#FFF"
            android:text="Save Event Details" />


    </LinearLayout>
</LinearLayout>
    </ScrollView>
