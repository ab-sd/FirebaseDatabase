<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/scrollView_edit"
    android:padding="16dp"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFDE7"> <!-- pale yellow background -->

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <!-- Title -->
        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/et_edit_title"
                android:hint="Please enter the title of event"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp" />
        </com.google.android.material.textfield.TextInputLayout>

        <!-- Event Type spinner -->
        <TextView
            android:layout_marginTop="16dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Event Type"
            android:textColor="#F57F17"
            android:textStyle="bold" />

        <FrameLayout
            android:id="@+id/spinner_edit_container"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:foreground="?attr/selectableItemBackground"
            android:clickable="true"
            android:focusable="true"
            android:padding="0dp">

            <Spinner
                android:id="@+id/spinner_edit_event_type"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/spinner_background_selector"
                android:popupBackground="@drawable/spinner_box_filled"
                android:paddingStart="4dp"
                android:paddingEnd="44dp" /> <!-- leave room for arrow -->

            <ImageView
                android:id="@+id/spinner_edit_arrow"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center|end"
                android:layout_marginEnd="12dp"
                android:src="@drawable/ic_arrow_drop_down" />
        </FrameLayout>


        <!-- Event Description (primary) -->
        <TextView
            android:layout_marginTop="16dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Event Description (English)"
            android:textColor="#F57F17"
            android:textStyle="bold" />

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/et_edit_description_primary"
                android:hint="Enter description details of event"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp" />
        </com.google.android.material.textfield.TextInputLayout>

        <!-- Description (secondary) -->
        <TextView
            android:layout_marginTop="16dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Event Description (isiZulu)"
            android:textColor="#F57F17"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/et_edit_description_secondary"
                    android:hint="Enter description in isiZulu"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="10dp" />
            </com.google.android.material.textfield.TextInputLayout>

            <ImageButton
                android:id="@+id/btn_paste_secondary_edit"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:src="@drawable/ic_paste"
                android:contentDescription="Paste from clipboard"
                android:layout_marginStart="8dp"
                android:padding="8dp"
                app:tint="#FBC02D" />

            <ProgressBar
                android:id="@+id/pb_edit_secondary_translate"
                style="?android:attr/progressBarStyleSmall"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:indeterminate="true"
                android:visibility="gone"
                android:layout_marginStart="6dp"/>
        </LinearLayout>

        <TextView
            android:id="@+id/tv_verify_edit_secondary"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Check isiZulu translation online"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:paddingTop="4dp"
            android:layout_marginStart="4dp"
            android:clickable="true"
            android:focusable="true"
            android:textColor="#0909EB"
            android:textStyle="italic" />

        <!-- Description (tertiary) -->
        <TextView
            android:layout_marginTop="16dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Event Description (Afrikaans)"
            android:textColor="#F57F17"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/et_edit_description_tertiary"
                    android:hint="Enter description in Afrikaans"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="10dp" />
            </com.google.android.material.textfield.TextInputLayout>

            <ImageButton
                android:id="@+id/btn_paste_tertiary_edit"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:src="@drawable/ic_paste"
                android:contentDescription="Paste from clipboard"
                android:layout_marginStart="8dp"
                android:padding="8dp"
                app:tint="#FBC02D" />

            <ProgressBar
                android:id="@+id/pb_edit_tertiary_translate"
                style="?android:attr/progressBarStyleSmall"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:indeterminate="true"
                android:visibility="gone"
                android:layout_marginStart="6dp"/>
        </LinearLayout>

        <TextView
            android:id="@+id/tv_verify_edit_tertiary"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Check Afrikaans translation online"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:paddingTop="4dp"
            android:layout_marginStart="4dp"
            android:clickable="true"
            android:focusable="true"
            android:textColor="#0909EB"
            android:textStyle="italic" />

        <!-- Date & Time -->
        <LinearLayout
            android:layout_marginTop="16dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="2">

            <TextView
                android:id="@+id/tv_edit_date"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:padding="12dp"
                android:text="Select date"
                android:textColor="#5D4037"
                android:background="@drawable/bg_date_time"
                android:gravity="center" />

            <TextView
                android:id="@+id/tv_edit_time"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:padding="12dp"
                android:text="Select time"
                android:textColor="#5D4037"
                android:background="@drawable/bg_date_time"
                android:gravity="center"
                android:layout_marginStart="8dp"/>

        </LinearLayout>

        <!-- Duration -->
        <com.google.android.material.textfield.TextInputLayout
            android:layout_marginTop="16dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/et_edit_duration"
                android:inputType="number"
                android:hint="Enter expected duration of event (minutes)"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp" />
        </com.google.android.material.textfield.TextInputLayout>


        <!-- Location -->
        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/til_edit_location"
            android:layout_marginTop="16dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/et_edit_location"
                android:hint="Enter the location of event"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp" />
        </com.google.android.material.textfield.TextInputLayout>

        <!-- Include Google Maps checkbox (below location) -->
        <CheckBox
            android:id="@+id/cb_edit_include_map"
            android:layout_marginTop="8dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Include Google Maps link"
            android:textColor="#F57F17"/>

        <!-- Map link row: hidden until checkbox is checked.
             Contains TextInput, paste button and progress -->
        <LinearLayout
            android:id="@+id/layout_edit_map_link_row"
            android:layout_marginTop="8dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:visibility="gone">

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/til_edit_map_link"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                app:boxStrokeColor="#FBC02D"
                app:hintTextColor="#F9A825">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/et_edit_map_link"
                    android:hint="Paste Google Maps share link (https://...)"
                    android:inputType="textUri"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
            </com.google.android.material.textfield.TextInputLayout>

            <ImageButton
                android:id="@+id/btn_paste_map_link_edit"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:src="@drawable/ic_paste"
                android:contentDescription="Paste map link"
                android:layout_marginStart="8dp"
                android:padding="8dp"
                app:tint="#FBC02D" />

        </LinearLayout>




        <!-- Hide Upcoming Switch -->
        <!-- Event Status Switch -->
        <LinearLayout
            android:id="@+id/layout_event_status"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:padding="12dp"
            android:background="@drawable/switch_container_bg"
            android:clickable="true"
            android:focusable="true">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_event_status"
                android:layout_marginEnd="12dp"
                app:tint="#F9A825" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_event_status_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Event Status"
                    android:textStyle="bold"
                    android:textColor="#F57F17"
                    android:textSize="16sp"/>

                <TextView
                    android:id="@+id/tv_event_status_subtitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Mark this event as completed when itâ€™s no longer upcoming"
                    android:textColor="#616161"
                    android:textSize="13sp"/>
            </LinearLayout>

            <Switch
                android:id="@+id/switch_edit_is_complete"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:checked="false"/>
        </LinearLayout>



        <!-- image pick + count -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_pick_more_images"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:padding="12dp"
            android:layout_gravity="center"
            android:text="Pick Images (max 15)"
            android:textColor="@color/button_text"
            android:backgroundTint="@color/button_tint"
            app:icon="@drawable/ic_camera"
            app:iconTint="@color/button_text"
            app:iconSize="25dp"
            app:iconPadding="8dp"
            app:cornerRadius="5dp"
            app:iconGravity="textStart" />

        <TextView
            android:id="@+id/tv_edit_images_count"
            android:layout_marginTop="8dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="No images selected"
            android:textColor="#616161" />

        <HorizontalScrollView
            android:id="@+id/hsv_edit_images"
            android:layout_marginTop="8dp"
            android:layout_width="match_parent"
            android:layout_height="160dp"
            android:fillViewport="false"
            android:scrollbars="none">
            <LinearLayout
                android:id="@+id/ll_edit_images"
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"/>
        </HorizontalScrollView>


        <ProgressBar
            android:id="@+id/pb_update"
            style="?android:attr/progressBarStyleLarge"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:visibility="gone"
            android:layout_marginTop="16dp"/>


    <LinearLayout
        android:id="@+id/et_action_buttons"
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical">

        <Button
            android:id="@+id/et_btn_cancel"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:backgroundTint="#BDBDBD"
            android:textColor="#000"
            android:text="Cancel" />

        <!-- spacing between buttons -->
        <Space
            android:layout_width="8dp"
            android:layout_height="wrap_content" />

        <Button
            android:id="@+id/btn_update"
            android:text="Save Event Details"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:backgroundTint="#F57F17"
            android:textColor="#FFF" />

    </LinearLayout>


    </LinearLayout>


</ScrollView>
